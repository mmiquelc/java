package Tasca7_EstructuresRepeticio2;

import java.util.Scanner;

public class Repeticio2_4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner in = new Scanner(System.in);

		final int y = 4;
		final int x = 4;
		
		String Array[][] = new String [y][x];
		
		System.out.println("  A B C D");
		
		for (int i = 0; i < Array.length; i++) {
			System.out.print((i+1));
			for (int j = 0; j < Array.length; j++) {
			System.out.print(Array[i][j]=" *");
			}
			System.out.println();
		}
		
		
		
		int i1 = (int)(Math.random()* 5)+1;
		int j1 = (int)(Math.random()* 5)+1;
		
		System.out.println(i1);
		System.out.println(j1);
		
		boolean sunken = true;
		
		while(sunken) {
			
			System.out.println("Entra una fila: ");
			int row = in.nextInt();
			System.out.println("Entra una columna: ");
			int column = in.nextInt();
			
			for (int i = 0; i < Array.length; i++) {
				System.out.print((i+1));
				for (int j = 0; j < Array.length; j++) {
					if (row == i1 && column == j1) {
						System.out.print(Array[row][column]=" V");
						sunken = false;
					} 
				}
				System.out.println();
			}
			
		}
	}

}
