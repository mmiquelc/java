package Tasca8b_MesMatrius;

import java.util.Scanner;

public class Tasca8b_4 {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);

        System.out.println("Digues quants números vols entre el 0 i 100: ");
        int sizeArray = in.nextInt();

        int[] Array = new int[sizeArray];

        // Llegir els números introduïts per l'usuari
        for (int i = 0; i < Array.length; i++) {
            System.out.print("Entra el " + (i + 1) + "r número: ");
            Array[i] = in.nextInt();
        }

        // Array per comptar les aparicions
        int[] counts = new int[101]; // Array de 0 a 100

        // Comptar les aparicions
        for (int i = 0; i < Array.length; i++) {
            if (Array[i] >= 0 && Array[i] <= 100) {
                counts[Array[i]]++; // Incrementar el comptador del número
            }
        }

        // Mostrar els resultats
        System.out.println("---- RESULTAT ----");
        for (int i = 0; i < counts.length; i++) {
            if (counts[i] > 0) {
                System.out.println(i + " apareix " + counts[i] + " vegada" + (counts[i] > 1 ? "s" : ""));
            }
        }

        in.close(); // Tancar el Scanner
    }
}
