package Tasca8_MatriusUnidimensionals;

import java.util.Scanner;

public class Tasca8_7 {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        
        int m[] = new int[4];
        
        for (int i = 0; i < m.length; i++) {
            System.out.print("Escriu el " + (i + 1) + " número: ");
            m[i] = in.nextInt();
        }
        
        boolean growing = true;
        boolean decreasing = true;
        boolean same = true;

        for (int i = 0; i < m.length - 1; i++) {
            if (m[i] == m[i + 1]) {
                same = false; // Si hay elementos iguales, no son todos iguales
                growing = false; // No puede ser creciente
                decreasing = false; // No puede ser decreciente
            } else if (m[i] > m[i + 1]) {
                growing = false; // Si m[i] es mayor que m[i+1], no es creciente
            } else {
                decreasing = false; // Si m[i] es menor que m[i+1], no es decreciente
            }
        }

        // Verificación final de resultados
        if (same) {
            System.out.println("Son iguals");
        } else if (growing) {
            System.out.println("Es creixent");
        } else if (decreasing) {
            System.out.println("Es decreixent");
        } else {
            System.out.println("Estan desordenats");
        }
        
        in.close(); // Cerrar el escáner
    }
}
